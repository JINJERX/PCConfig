<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp3.MainPage"
             Title="Главная"
             BackgroundColor="#1E1E1E">

    <!-- Кнопка-флаг в правом верхнем углу -->
    <ContentPage.ToolbarItems>
        <ToolbarItem IconImageSource="flag_ru.png"
                     Order="Primary"
                     Priority="0"
                     Clicked="OnLanguageClicked" />
    </ContentPage.ToolbarItems>

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="25" HorizontalOptions="Center">

            <!-- Логотип -->
            <Image Source="akame_bot.png"
                   HeightRequest="150"
                   Aspect="AspectFit"
                   HorizontalOptions="Center"/>

            <!-- Заголовок -->
            <Label Text="Добро пожаловать в конфигуратор ПК!"
                   FontSize="24"
                   FontAttributes="Bold"
                   TextColor="White"
                   HorizontalTextAlignment="Center"
                   HorizontalOptions="Center"/>

            <!-- Подзаголовок -->
            <Label Text="Соберите идеальный компьютер из доступных комплектующих"
                   FontSize="16"
                   TextColor="Gray"
                   HorizontalTextAlignment="Center"
                   HorizontalOptions="Center"
                   Margin="0,-10,0,10"/>

            <!-- Кнопка перехода к конфигуратору -->
            <Button Text="Перейти к конфигуратору"
                    Clicked="OnGoToConfiguratorClicked"
                    BackgroundColor="#FF4500"
                    TextColor="White"
                    FontAttributes="Bold"
                    CornerRadius="10"
                    HeightRequest="50"/>

            <!-- Кнопка администратора -->
            <Button Text="Перейти в админ панель"
                    Clicked="OnAdminPageClicked"
                    BackgroundColor="#2A2A2A"
                    TextColor="#FF4500"
                    FontAttributes="Bold"
                    CornerRadius="10"
                    HeightRequest="50"/>

            <!-- Версия -->
            <Label Text="Версия 1.0.0"
                   TextColor="Gray"
                   FontSize="12"
                   HorizontalOptions="Center"
                   Margin="0,20,0,0"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
