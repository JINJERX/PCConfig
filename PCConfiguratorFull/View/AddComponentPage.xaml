<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp3.View.AddComponentPage"
             Title="Добавить компонент"
             BackgroundColor="#1E1E1E">

    <ScrollView>
        <StackLayout Padding="20" Spacing="15">

            <!-- Основные поля -->
            <Entry x:Name="NameEntry" Placeholder="Название компонента" BackgroundColor="#2A2A2A" TextColor="White"/>
            <Entry x:Name="PowerEntry" Placeholder="Потребление энергии (Вт)" Keyboard="Numeric" BackgroundColor="#2A2A2A" TextColor="White"/>

            <!-- Выбор типа -->
            <Picker x:Name="ComponentTypePicker"
                    Title="Тип компонента"
                    SelectedIndexChanged="OnTypeChanged"
                    BackgroundColor="#2A2A2A"
                    TextColor="White">
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>CPU</x:String>
                        <x:String>GPU</x:String>
                        <x:String>RAM</x:String>
                        <x:String>Storage</x:String>
                        <x:String>PSU</x:String>
                        <x:String>Case</x:String>
                        <x:String>Motherboard</x:String>
                        <x:String>Cooling</x:String>
                    </x:Array>
                </Picker.ItemsSource>
            </Picker>

            <!-- CPU -->
            <StackLayout x:Name="CPUFields" IsVisible="False">
                <Entry x:Name="SocketEntry" Placeholder="Сокет" BackgroundColor="#2A2A2A" TextColor="White"/>
                <Entry x:Name="TDPEntry" Placeholder="TDP" Keyboard="Numeric" BackgroundColor="#2A2A2A" TextColor="White"/>
            </StackLayout>

            <!-- GPU -->
            <StackLayout x:Name="GPUFields" IsVisible="False">
                <Entry x:Name="GpuLengthEntry" Placeholder="Длина видеокарты (мм)" Keyboard="Numeric" BackgroundColor="#2A2A2A" TextColor="White"/>
                <Entry x:Name="RecommendedPSUEntry" Placeholder="Реком. мощность БП" Keyboard="Numeric" BackgroundColor="#2A2A2A" TextColor="White"/>
            </StackLayout>

            <!-- RAM -->
            <StackLayout x:Name="RAMFields" IsVisible="False">
                <Entry x:Name="RamTypeEntry" Placeholder="Тип памяти (DDR4, DDR5)" BackgroundColor="#2A2A2A" TextColor="White"/>
                <Entry x:Name="RamCapacityEntry" Placeholder="Объем (ГБ)" Keyboard="Numeric" BackgroundColor="#2A2A2A" TextColor="White"/>
                <Entry x:Name="RamFreqEntry" Placeholder="Частота (МГц)" Keyboard="Numeric" BackgroundColor="#2A2A2A" TextColor="White"/>
                <Entry x:Name="RamModulesEntry" Placeholder="Количество модулей" Keyboard="Numeric" BackgroundColor="#2A2A2A" TextColor="White"/>
            </StackLayout>

            <!-- Storage -->
            <StackLayout x:Name="StorageFields" IsVisible="False">
                <Entry x:Name="ConnectionTypeEntry" Placeholder="Тип подключения (SATA, NVMe...)" BackgroundColor="#2A2A2A" TextColor="White"/>
                <Entry x:Name="StorageCapacityEntry" Placeholder="Объем (ГБ)" Keyboard="Numeric" BackgroundColor="#2A2A2A" TextColor="White"/>
                <Entry x:Name="StorageFormFactorEntry" Placeholder="Форм-фактор (2.5'', 3.5'', M.2...)" BackgroundColor="#2A2A2A" TextColor="White"/>
            </StackLayout>

            <!-- PSU -->
            <StackLayout x:Name="PSUFields" IsVisible="False">
                <Entry x:Name="WattageEntry" Placeholder="Мощность (Вт)" Keyboard="Numeric" BackgroundColor="#2A2A2A" TextColor="White"/>
                <Entry x:Name="EfficiencyEntry" Placeholder="Класс эффективности (80+ Bronze...)" BackgroundColor="#2A2A2A" TextColor="White"/>
                <Entry x:Name="PSUFormEntry" Placeholder="Форм-фактор (ATX, SFX...)" BackgroundColor="#2A2A2A" TextColor="White"/>
            </StackLayout>

            <!-- Case -->
            <StackLayout x:Name="CaseFields" IsVisible="False">
                <Entry x:Name="SupportedFormEntry" Placeholder="Поддержка форм-факторов (ATX, mATX...)" BackgroundColor="#2A2A2A" TextColor="White"/>
                <Entry x:Name="MaxGpuLengthEntry" Placeholder="Макс. длина видеокарты (мм)" Keyboard="Numeric" BackgroundColor="#2A2A2A" TextColor="White"/>
                <Entry x:Name="CoolingClearanceEntry" Placeholder="Макс. высота охлаждения (мм)" Keyboard="Numeric" BackgroundColor="#2A2A2A" TextColor="White"/>
                <Entry x:Name="CasePSUFormEntry" Placeholder="Форм-фактор БП" BackgroundColor="#2A2A2A" TextColor="White"/>
            </StackLayout>

            <!-- Motherboard -->
            <StackLayout x:Name="MotherboardFields" IsVisible="False">
                <Entry x:Name="SocketEntry2" Placeholder="Сокет" BackgroundColor="#2A2A2A" TextColor="White"/>
                <Entry x:Name="FormFactorEntry" Placeholder="Форм-фактор (ATX...)" BackgroundColor="#2A2A2A" TextColor="White"/>
                <Entry x:Name="ChipsetEntry" Placeholder="Чипсет (B550...)" BackgroundColor="#2A2A2A" TextColor="White"/>
                <Entry x:Name="RamTypeEntry2" Placeholder="Тип памяти (DDR4...)" BackgroundColor="#2A2A2A" TextColor="White"/>
                <Entry x:Name="RamSlotsEntry" Placeholder="Слотов ОЗУ" Keyboard="Numeric" BackgroundColor="#2A2A2A" TextColor="White"/>
                <Entry x:Name="MaxRamEntry" Placeholder="Макс. объем ОЗУ (ГБ)" Keyboard="Numeric" BackgroundColor="#2A2A2A" TextColor="White"/>
                <Entry x:Name="PCIESlotsEntry" Placeholder="Слотов PCIe" Keyboard="Numeric" BackgroundColor="#2A2A2A" TextColor="White"/>
                <Entry x:Name="StorageInterfacesEntry" Placeholder="Интерфейсы хранилищ (SATA, M.2...)" BackgroundColor="#2A2A2A" TextColor="White"/>
                <Entry x:Name="GPUMaxLengthEntry" Placeholder="Макс. длина GPU (мм)" Keyboard="Numeric" BackgroundColor="#2A2A2A" TextColor="White"/>
            </StackLayout>

            <!-- Cooling -->
            <StackLayout x:Name="CoolingFields" IsVisible="False">
                <Entry x:Name="CoolingTypeEntry" Placeholder="Тип охлаждения (Air, Liquid)" BackgroundColor="#2A2A2A" TextColor="White"/>
                <Entry x:Name="SocketSupportEntry" Placeholder="Поддерживаемые сокеты (AM4, LGA1700...)" BackgroundColor="#2A2A2A" TextColor="White"/>
                <Entry x:Name="MaxCoolingTDPEntry" Placeholder="Макс. TDP" Keyboard="Numeric" BackgroundColor="#2A2A2A" TextColor="White"/>
            </StackLayout>

            <!-- Цена -->
            <Entry x:Name="PriceEntry" Placeholder="Цена" Keyboard="Numeric" BackgroundColor="#2A2A2A" TextColor="White"/>
            <Entry x:Name="CurrencyEntry" Placeholder="Валюта (по умолчанию MDL)" BackgroundColor="#2A2A2A" TextColor="White"/>

            <!-- Сохранение -->
            <Button Text="Сохранить компонент"
                    Clicked="OnSaveClicked"
                    BackgroundColor="#FF4500"
                    TextColor="White"
                    CornerRadius="10"
                    Margin="0,10"/>

        </StackLayout>
    </ScrollView>
</ContentPage>
