<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp3.View.ConfiguratorPage"
             Title="Конфигуратор ПК"
             BackgroundColor="#121212">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="18">

            <!-- Заголовок -->
            <Label Text="Сборка компьютера"
                   FontSize="26"
                   FontAttributes="Bold"
                   TextColor="White"
                   HorizontalOptions="Center"
                   Margin="0,10"/>

            <BoxView HeightRequest="1" Color="Gray" />

            <HorizontalStackLayout HorizontalOptions="Center" Spacing="10">
                <Label Text="Упростить выбор для новичков"
                   TextColor="White"
                   FontSize="14"
                   VerticalOptions="Center"/>
                <Switch x:Name="SimplifiedModeSwitch"
                    IsToggled="False"
                    Toggled="SimplifiedModeSwitch_Toggled" />
            </HorizontalStackLayout>
            
            <!-- Выбор компонентов -->
            <Label Text="Выберите комплектующие:"
                   TextColor="White"
                   FontSize="18"
                   FontAttributes="Bold"
                   Margin="0,5"/>

            
            <!-- CPU -->
            <Picker x:Name="CPUSelector" Title="Процессор" BackgroundColor="#2A2A2A" TextColor="White" SelectedIndexChanged="OnCPUChanged" />
            <Label x:Name="CPUPriceLabel" TextColor="White" FontSize="14" Margin="0,0,0,10"/>

            <!-- GPU -->
            <Picker x:Name="GPUSelector" Title="Видеокарта" BackgroundColor="#2A2A2A" TextColor="White" SelectedIndexChanged="OnGPUChanged"/>
            <Label x:Name="GPUPriceLabel" TextColor="White" FontSize="14" Margin="0,0,0,10"/>

            <!-- RAM -->
            <Picker x:Name="RAMSelector" Title="Оперативная память" BackgroundColor="#2A2A2A" TextColor="White" SelectedIndexChanged="OnRAMChanged"/>
            <Label x:Name="RAMPriceLabel" TextColor="White" FontSize="14" Margin="0,0,0,10"/>

            <!-- Storage -->
            <Picker x:Name="StorageSelector" Title="Накопитель" BackgroundColor="#2A2A2A" TextColor="White" SelectedIndexChanged="OnStorageChanged"/>
            <Label x:Name="StoragePriceLabel" TextColor="White" FontSize="14" Margin="0,0,0,10"/>

            <!-- PSU -->
            <Picker x:Name="PSUSelector" Title="Блок питания" BackgroundColor="#2A2A2A" TextColor="White" SelectedIndexChanged="OnPSUChanged"/>
            <Label x:Name="PSUPriceLabel" TextColor="White" FontSize="14" Margin="0,0,0,10"/>

            <!-- Case -->
            <Picker x:Name="CaseSelector" Title="Корпус" BackgroundColor="#2A2A2A" TextColor="White" SelectedIndexChanged="OnCaseChanged"/>
            <Label x:Name="CasePriceLabel" TextColor="White" FontSize="14" Margin="0,0,0,10"/>

            <!-- Motherboard -->
            <Picker x:Name="MotherboardSelector" Title="Материнская плата" BackgroundColor="#2A2A2A" TextColor="White" SelectedIndexChanged="OnMotherboardChanged"/>
            <Label x:Name="MotherboardPriceLabel" TextColor="White" FontSize="14" Margin="0,0,0,10"/>

            <!-- Cooling -->
            <Picker x:Name="CoolingSelector" Title="Охлаждение" BackgroundColor="#2A2A2A" TextColor="White" SelectedIndexChanged="OnCoolingChanged"/>
            <Label x:Name="CoolingPriceLabel" TextColor="White" FontSize="14" Margin="0,0,0,10"/>
          

            <BoxView HeightRequest="1" Color="Gray" Margin="0,10"/>

            <!-- Кнопки -->
            <Button Text="Сохранить сборку"
                    Clicked="OnSaveBuildClicked"
                    BackgroundColor="#FF4500"
                    TextColor="White"
                    CornerRadius="10"
                    Margin="0,5"/>

            <Button Text="Мои сохраненные сборки"
                    Clicked="OnGoToSavedBuildsClicked"
                    BackgroundColor="#2A2A2A"
                    TextColor="White"
                    CornerRadius="10"
                    Margin="0,5"/>

            <Button Text="Проверить совместимость"
                    Clicked="OnCheckCompatibilityClicked"
                    BackgroundColor="#2A2A2A"
                    TextColor="#FF4500"
                    CornerRadius="10"
                    Margin="0,5"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
